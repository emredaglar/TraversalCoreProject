@model List<AppRole>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<div class="card">
	<h5 class="card-header">Rol Listesi</h5>
	<div class="table-responsive text-nowrap">
		@if (Model.Count > 0)
		{
			<table class="table table-borderless">
				<thead>
					<tr>
						<th>#</th>
						<th>Rol</th>
						<th>Rolü Sil</th>
						<th>Rolü Güncelle</th>
					</tr>
				</thead>
				<tbody>

					@foreach (var item in Model)
					{
						count++;
						<tr>
							<td>@count</td>
							<td>@item.Name</td>
							<td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
						</tr>
					}

				</tbody>

			</table>
		}
		else
		{
			<div class="alert alert-success">
				<span>Atanmış Bir Rol Bulunamadı.</span>
			</div>
		}
		<br />
		<div class="container">
			<div class="d-flex justify-content-start gap-2">
				<a href="/Admin/Role/CreateRole/" class="btn btn-outline-primary">Yeni Rol Ekle</a>
				<a href="/Admin/Role/UserList/" class="btn btn-outline-secondary">Kullanıcıya Rol Ata</a>
			</div>
		</div>
	</div>
</div>
