@using EntityLayer.Concrete
@model List<Guide>


<div class="col-xl-4 col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Tur Rehberlerimiz</h4>
            <a class="heading-elements-toggle">
                <i class="fa fa-ellipsis-v font-medium-3"></i>
            </a>
            <div class="heading-elements">
                <ul class="list-inline mb-0">
                    <li>
                        <a data-action="reload">
                            <i class="ft-rotate-cw"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="card-content">
            <div id="recent-buyers" class="media-list">
               
                    @foreach (var item in Model)
                    {
                    <a href="/Guide/Index/" class="media border-0">
                        <div class="media-left pr-1">
                            <span class="avatar avatar-md avatar-online">
                                <img class="media-object rounded-circle" src="@item.Image" alt="Guide">
                                <i></i>
                            </span>
                        </div>
                        <div class="media-body w-100">
                            <span class="list-group-item-heading">
                               @item.Name

                            </span>
                            <ul class="list-unstyled users-list m-0 float-right">
                                <li data-toggle="tooltip" data-popup="tooltip-custom" data-original-title="@item.Destinations.FirstOrDefault()?.City" class="avatar avatar-sm pull-up">
                                    <img class="media-object custom-image-size" style="height:40px" src="@item.Destinations.FirstOrDefault()?.Image" alt="Destination Image">
                                </li>
                            </ul>
                            <p class="list-group-item-text mb-0">
                                <span class="blue-grey lighten-2 font-small-3">@item.Description </span>
                            </p>
                        </div>
                    </a>
                    }
                           
            </div>
        </div>
    </div>
</div>